// simple data without labels
var data = [1, 7, 5, 3];

// simple multi dimensional data
var data = [
	[1, 7, 5, 3],
	[2, 5, 1, 4]
];

// simple data with categories
var data = [
	{ 'Sales': [2, 4, 1, 3] },
	{ 'Engineering': [2, 3, 2, 4] }
];

// simple data with nested catagories
var data = [
	{ '2001': [
		{ 'Sales': [2, 4, 1, 3] },
		{ 'Engineering': [2, 3, 2, 4] }
	]},
	{ '2002': [
		{ 'Sales': [3, 5, 1, 3] },
		{ 'Engineering': [2, 4, 1, 5] }
	]}
];


